        <shape android:shape="rectangle" >
            <size android:width="50dp" android:height="50dp" />
            <solid android:color="#000000"/>
        </shape>
    </item>
    <item
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" />
        </shape>
    </item>
</layer-list>